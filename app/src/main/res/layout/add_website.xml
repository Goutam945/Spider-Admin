<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/dailogbackground"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:weightSum="1">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/spiderlogo5" />
        <ImageView
            android:id="@+id/iv_cancel_dialog"
            android:layout_width="50dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            app:tint="@color/white"
            android:layout_weight=".1" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/d_black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Website"
                    style="@style/Edittext_title" />


                <EditText
                    android:id="@+id/editname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_textnew"
                    android:drawablePadding="5dp"
                    android:hint="Website name"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    style="@style/Edittext" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Url"
                    style="@style/Edittext_title"/>


                <EditText
                    android:id="@+id/editurl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_textnew"
                    android:drawablePadding="5dp"
                    android:hint="Url"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    style="@style/Edittext" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Description"
                    style="@style/Edittext_title" />


                <EditText
                    android:id="@+id/editdescription"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/edit_textnew"
                    android:drawablePadding="5dp"
                    android:hint="Description"
                    android:gravity="start"
                    android:paddingTop="20dp"
                    android:textAlignment="textStart"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    style="@style/Edittext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:text="Games"
                    style="@style/Edittext_title" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_textnew"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:theme="@style/checkBoxStyle"
                                android:id="@+id/cricket"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:checked="false"
                                android:padding="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/gtwalsheimpro_regular"
                                android:text="@string/Cricket"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_cricketprice"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:hint="0"
                                android:visibility="gone"
                                android:inputType="number"
                                android:paddingTop="5dp"
                                android:background="@drawable/bg_edit_text"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                style="@style/Edittext"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:theme="@style/checkBoxStyle"
                                android:id="@+id/football"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:checked="false"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:text="@string/Football"
                                android:textSize="15dp"
                                android:fontFamily="@font/gtwalsheimpro_regular" />
                            <EditText
                                android:id="@+id/et_footbalprice"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                               android:background="@drawable/bg_edit_text"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:inputType="number"
                                android:gravity="center"
                                android:hint="0"
                                android:paddingTop="5dp"
                                style="@style/Edittext"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:theme="@style/checkBoxStyle"
                                android:id="@+id/tennis"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:checked="false"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:text="@string/Tennis"
                                android:textSize="15dp"
                                android:fontFamily="@font/gtwalsheimpro_regular" />
                            <EditText
                                android:id="@+id/et_tenies"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:hint="0"
                                android:visibility="gone"
                                android:paddingTop="5dp"
                                android:inputType="number"
                                android:background="@drawable/bg_edit_text"
                                android:gravity="center"
                                android:layout_weight="1"
                                style="@style/Edittext"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:theme="@style/checkBoxStyle"
                                android:id="@+id/horseRacing"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:checked="false"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:text="@string/HorseRacing"
                                android:textSize="15dp"
                                android:fontFamily="@font/gtwalsheimpro_regular" />
                            <EditText
                                android:id="@+id/et_hourse"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:hint="0"
                                android:visibility="gone"
                                android:paddingTop="5dp"
                                android:inputType="number"
                                android:background="@drawable/bg_edit_text"
                                android:layout_weight="1"
                                android:gravity="center"
                                style="@style/Edittext"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:theme="@style/checkBoxStyle"
                                android:id="@+id/Cards"
                                android:layout_weight="1"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:checked="false"
                                android:padding="10dp"
                                android:text="@string/Cards"
                                android:textSize="15dp"
                                android:fontFamily="@font/gtwalsheimpro_regular" />
                            <EditText
                                android:id="@+id/et_card"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:hint="0"
                                android:paddingTop="5dp"
                                android:visibility="gone"
                                android:inputType="number"
                                android:background="@drawable/bg_edit_text"
                                android:layout_weight="1"
                                android:gravity="center"
                                style="@style/Edittext"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:weightSum="2"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:theme="@style/checkBoxStyle"
                                android:id="@+id/livcosino"
                                android:layout_weight="1"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:checked="false"
                                android:padding="10dp"
                                android:text="@string/Livcasino"
                                android:textSize="15dp"
                                android:fontFamily="@font/gtwalsheimpro_regular" />
                            <EditText
                                android:id="@+id/et_livcosino"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:hint="0"
                                android:paddingTop="5dp"
                                android:inputType="number"
                                android:visibility="gone"
                                android:background="@drawable/bg_edit_text"
                                android:layout_weight="1"
                                android:gravity="center"
                                style="@style/Edittext"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:weightSum="2"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:theme="@style/checkBoxStyle"
                                android:id="@+id/politics"
                                android:layout_weight="1"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:checked="false"
                                android:padding="10dp"
                                android:text="@string/Politics"
                                android:textSize="15dp"
                                android:fontFamily="@font/gtwalsheimpro_regular" />
                            <EditText
                                android:id="@+id/et_politics"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:hint="0"
                                android:paddingTop="5dp"
                                android:inputType="number"
                                android:background="@drawable/bg_edit_text"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:visibility="gone"
                                style="@style/Edittext"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/mv_image"
                    android:visibility="gone"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:paddingTop="15dp"
                    android:adjustViewBounds="true"
                    android:paddingBottom="15dp"
                    android:src="@drawable/spiderlogo5"
                    android:background="@drawable/edit_textnew"/>
                <TextView
                    android:id="@+id/tv_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_textnew"
                    style="@style/Edittext"
                    android:text="Upload image"/>
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"
                    android:backgroundTint="@color/apptheamcolor"
                    android:layout_gravity="bottom"
                    android:textSize="17dp"
                    android:textColor="@color/White"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_edit_text1"
                    android:text="Save" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</LinearLayout>