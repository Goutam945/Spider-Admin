<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Act_Login_screen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivLogLogo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/spiderlogo5" />

       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Spider"
            android:textColor="@color/apptheamcolor"
            android:textSize="50dp"
            android:fontFamily="@font/gtwalsheimpro_bold" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Phone No."
            style="@style/Edittext_title"
          />


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_textnew"
            android:drawablePadding="5dp"
            android:hint="Phone No."
            android:text="admin@spiderapp.com"
            android:drawableRight="@drawable/ic_baseline_local_phone_24"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/Edittext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Password"
            style="@style/Edittext_title"
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_textnew"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:text="Spider@123"
                android:drawableRight="@drawable/ic_baseline_visibility_24"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                style="@style/Edittext"
                />

            <ImageView
                android:id="@+id/show_pass_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:alpha=".5" />
        </RelativeLayout>


        <!--<EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_edit_text"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:drawableRight="@drawable/ic_baseline_visibility_24"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:textColor="#FFF"
            android:textColorHint="#999" />-->

        <TextView
            android:id="@+id/tvForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:text="Forgot Password?"
            style="@style/Edittext_title"
             />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:text="Login"
            android:textColor="@color/white"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:textSize="15dp" />


    </LinearLayout>

</RelativeLayout>