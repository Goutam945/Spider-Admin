<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/gtwalsheimpro_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:text="New user"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:id="@+id/usercount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gtwalsheimpro_bold"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:text="12"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp"
            app:cardBackgroundColor="@color/d_black"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/gtwalsheimpro_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:text="Withdrawal"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:id="@+id/withdralcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gtwalsheimpro_bold"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:text="10"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp"
            app:cardBackgroundColor="@color/d_black"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/gtwalsheimpro_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:text="Deposits"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:id="@+id/countdeposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gtwalsheimpro_bold"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:text="8"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp"
            app:cardBackgroundColor="@color/d_black"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/layclick"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/gtwalsheimpro_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:text="Client id"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:id="@+id/userrequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gtwalsheimpro_bold"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:text="8"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>