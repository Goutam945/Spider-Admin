<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/ivLogLogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/spiderlogo5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Title"
            style="@style/Edittext_title" />


        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_textnew"
            android:drawablePadding="5dp"
            android:hint="Title"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/Edittext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Code"
            style="@style/Edittext_title"
            />


        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_textnew"
            android:drawablePadding="5dp"
            android:hint="Code"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/Edittext" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Price"
            style="@style/Edittext_title"
            />


        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_textnew"
            android:drawablePadding="5dp"
            android:hint="Price"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/Edittext" />

        <ImageView
            android:id="@+id/mv_offer"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingTop="15dp"
            android:adjustViewBounds="true"
            android:paddingBottom="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/spiderlogo5"
            android:background="@drawable/edit_textnew"/>
        <TextView
            android:id="@+id/tv_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edit_textnew"
            style="@style/Edittext"
            android:text="Upload banner"/>





        <Button
            android:id="@+id/btn_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn"
            android:text="Create"
            android:layout_marginBottom="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:textSize="15dp" />


    </LinearLayout>

</ScrollView>