<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_margin="5dp"
    tools:context=".User_requestlist"
    android:id="@+id/cont_lay">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Deposits_details"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="6dip"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp">

                    <ImageView
                        android:id="@+id/paymentscreenshot"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/spiderlogo5" />

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/websitename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/paymentscreenshot"
                        android:layout_toRightOf="@id/paymentscreenshot"
                        android:gravity="center_vertical"
                        style="@style/requestuser"
                       />


                    <TextView
                        android:id="@+id/paymentmethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/websitename"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/paymentscreenshot"
                        android:layout_toRightOf="@id/paymentscreenshot"
                        android:ellipsize="end"
                        android:maxLines="1"
                        style="@style/requestuser"
                       />

                    <TextView
                        android:id="@+id/loginusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/paymentmethod"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/paymentscreenshot"
                        android:layout_toRightOf="@id/paymentscreenshot"
                        android:ellipsize="end"
                        android:maxLines="1"
                        style="@style/requestuser"
                        />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loginusername"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/paymentscreenshot"
                        android:layout_toRightOf="@id/paymentscreenshot"
                        android:ellipsize="end"
                        android:maxLines="1"
                        style="@style/requestuser"
                        />

                    <TextView
                        android:id="@+id/coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/paymentscreenshot"
                        android:layout_toRightOf="@id/paymentscreenshot"
                        android:ellipsize="end"
                        android:maxLines="1"
                        style="@style/requestuser"
                       />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/websitename"
                    app:layout_constraintTop_toBottomOf="@id/paymentscreenshot">

                    <Button
                        android:id="@+id/btn_accept"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/buttonblue_shape"
                        android:text="Accept"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_reject"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_shape"
                        android:text="rejected"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>